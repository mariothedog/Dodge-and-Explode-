[sub_resource type="Shader" id=3]
code = "shader_type canvas_item;

uniform bool apply = false;

// Blur
uniform float blur_amount = 1;

// Chromatic Aberration
uniform float chromatic_amount = 0.5;
uniform sampler2D offset_texture : hint_white;

// Darkened Screen
uniform float darkness_multi = 0.8;

void fragment() {
	vec4 color = textureLod(SCREEN_TEXTURE, SCREEN_UV, 0.0);
	if (apply) {
		// Blur
		color = textureLod(SCREEN_TEXTURE, SCREEN_UV, blur_amount);
		
		// Chromatic Aberration
		float adjusted_amount = chromatic_amount * texture(offset_texture, UV).r / 100.0;
		color.r = texture(SCREEN_TEXTURE, vec2(SCREEN_UV.x + adjusted_amount, SCREEN_UV.y)).r;
		color.b = texture(SCREEN_TEXTURE, vec2(SCREEN_UV.x - adjusted_amount, SCREEN_UV.y)).b;
		
		// Darken the screen
		color.rgb *= darkness_multi;
	}
	COLOR = color;
}"

